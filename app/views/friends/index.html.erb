<% if user_signed_in? %>

  <h2 class="mb-3">My Friends List</h2>
  <table class="table table-striped table-bordered table-hover text-center">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>User Id</th>
        <th colspan='3'></th>
      </tr>
    </thead>
    <tbody >
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
        <tr>
            <td><%= friend.first_name %> <%= friend.last_name %></td> 
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= friend.user_id %></td>
            <td><%= link_to 'View', friend_path(friend), class: "btn btn-outline-primary btn-sm" %></td>
            <td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-outline-success btn-sm" %></td>
            <td><%= button_to 'Delete', friend, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-outline-danger btn-sm" %></td>    
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <br/>
  <%= link_to 'Add Friend', new_friend_path, class: "btn btn-secondary"  %>
<% else %>
  <h1 class="d-flex justify-content-center">Welcome to Friends App!</h1>
<% end %>